{
  "name": "observe-2ch-client",
  "version": "0.0.1",
  "description": "UI for Observe 2ch Web",
  "author": "gutchom",
  "license": "MIT",
  "homepage": "https://observe-2ch.gutchom.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/gutchom/observe-2ch-client"
  },
  "bugs": {
    "url": "https://github.com/gutchom/assets-manifest/issues"
  },
  "engines": {
    "node": "^8.*",
    "npm": "^5.*"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all --silent -p dev:* server:*",
    "test": "cross-env NODE_ENV=test karma start",
    "testing": "npm run test -- --auto-watch --no-single-run",
    "build": "cross-env NODE_ENV=production npm-run-all --silent lint:* test clean build:*",
    "build:asset": "sync-files ./src/assets/**/* ./public",
    "build:style": "postcss ./src/styles/**/*.css -b ./src/styles -d ./public/css --no-map",
    "build:script": "webpack --progress",
    "dev:asset": "sync-files --watch ./src/assets/**/* ./public",
    "dev:style": "postcss ./src/styles/**/*.css -b ./src/styles -d ./public/css -w",
    "dev:script": "webpack --progress -w",
    "lint:style": "stylelint --fix ./src/styles/**/*.css",
    "lint:script": "tslint -p tsconfig.json  --type-check --fix ./src/{scripts,test}/**/*.{ts,tsx}",
    "server:mock": "cross-env PORT=${OBSERVE_2CH_PORT-3000} node ./server.js",
    "server:sync": "browser-sync start -b 'google chrome' -f ./public -p localhost:${OBSERVE_2CH_PORT-3000} --port ${OBSERVE_2CH_SYNC-3333}",
    "clean": "rimraf public/*"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^17.1.0",
    "array-nth": "^1.0.1",
    "array-unique": "^0.3.2",
    "axios": "^0.16.2",
    "eventemitter3": "^2.0.3",
    "normalize.css": "^7.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "url-search-params": "^0.10.0"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.7",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/power-assert": "^1.4.29",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/sinon": "^2.3.4",
    "@types/tween.js": "16.6.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.18.1",
    "browser-sync": "^2.18.13",
    "caniuse-lite": "^1.0.30000727",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "colors": "^1.1.2",
    "cross-env": "^5.0.5",
    "cssnano": "^3.10.0",
    "enzyme": "^2.9.1",
    "express": "^4.15.4",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-power-assert": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-sourcemap-writer": "^0.1.2",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "postcss": "^6.0.11",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-reporter": "^5.0.0",
    "power-assert": "^1.4.4",
    "pug": "^2.0.0-rc.4",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.2",
    "sinon": "^3.2.1",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.6.0",
    "sync-files": "^1.0.3",
    "ts-loader": "^2.3.7",
    "tslint": "5.7.0",
    "typescript": "2.5.2",
    "uglify-js": "^3.1.0",
    "webpack": "^3.5.6"
  },
  "browserslist": [
    "> 5%",
    "last 2 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/properties-alphabetical-order": true,
      "order/order": [
        "custom-properties",
        "declarations"
      ]
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "syntax-object-rest-spread"
    ],
    "env": {
      "test": {
        "presets": [
          "airbnb",
          "power-assert"
        ]
      }
    }
  }
}
